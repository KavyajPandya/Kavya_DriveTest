<!DOCTYPE html>
<html lang="en">
    <head> 
        <%- include('layouts/header'); -%>        
    </head>
    <body>
        <!-- Navigation-->
        <%- include('layouts/navbar'); -%>        
        <!-- Page Header-->
        <header class="masthead" style="background-image: url('/assets/img/g-bg.jpg')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="post-heading">
                            <h1>G_Test</h1>
                            <h2 class="subheading">Book your G test here</h2>  
                           


                            
                            <p style="font-size: larger; background-color: white;" class="text-danger"><%= fillInfo %></p>                                
                            <% if(fillInfo === null) { %>
                            <!-- <form id="contactForm" action="/updateUser/<%= userdata._id %>" method="get"> -->
                            <form id="contactForm" action="g_test/update/" method="post">                               
                                <!-- <p style="font-size: larger; background-color: white;" class="text-danger"><%= fillInfo %></p>                                 -->
                                
                                <h3>Personal details</h3>
                                    <div class="form-floating">
                                        <input class="form-control" id="fname" name="fname" readonly value="<%= userdata.firstname %>" type="text" placeholder="Enter your first name..."  />
                                        <label for="fname">First Name</label>
                                    </div>
                                    <div class="form-floating">
                                        <input class="form-control" id="lname" name="lname" readonly value="<%= userdata.lastname %>" type="text" placeholder="Enter your last name..."  />
                                        <label for="lname">Last Name</label>
                                    </div>
                                    <div class="form-floating">
                                        <input class="form-control" id="liscense_no" readonly value="<%= userdata.License_No %>" name="liscense_no" type="text"  />
                                        <label for="liscense_no">Liscense No.</label>
                                    </div>
                                    <div class="form-floating">
                                        <input class="form-control" id="age" readonly value="<%= userdata.Age %>" name="age" type="number" placeholder="Enter your age..." />
                                        <label for="age">Age</label>
                                    </div>
                                    <!-- <div class="form-floating">
                                        <input class="form-control" id="dob" name="dob" readonly type="date" placeholder="Enter your dob..."  />
                                        <label for="dob">Date of birth</label>
                                    </div>   -->
                                    <!-- <div class="form-floating">
                                        <input class="form-control" id="car_name" name="car_name" readonly  type="text" placeholder="Enter Car Name..." />
                                        <label for="car_name">Car Name</label>
                                    </div>      
                                                               -->
                                    <h3>Car details</h3>
                                    <div class="form-floating">
                                        <input class="form-control" id="make" name="make" value="<%= userdata.car_details.make %>" type="text" placeholder="Enter your make..."  />
                                        <label for="make">Make</label>                                       
                                    </div>
                                    <div class="form-floating">
                                        <input class="form-control" id="model" name="model" value="<%= userdata.car_details.model %>" type="text" placeholder="Enter car model..." />
                                        <label for="model">Model</label>                                        
                                    </div>
                                    <div class="form-floating">
                                        <input class="form-control" id="year" name="year" value="<%= userdata.car_details.year %>" type="number" placeholder="Enter your age..." />
                                        <label for="year">Year</label>                                        
                                    </div>
                                    <div class="form-floating">
                                        <input class="form-control" id="plat_num" value="<%= userdata.car_details.platno %>" name="plat_num" type="text" placeholder="Enter your dob..." />
                                        <label for="plat_num">Plate Number</label>
                                    </div>                                      
                                    <!-- Submit success message-->
                                    <!---->
                                    <!-- This is what your users will see when the form-->
                                    <!-- has successfully submitted-->
                                    <div class="d-none" id="submitSuccessMessage">
                                        <div class="text-center mb-3">
                                            <div class="fw-bolder">Form submission successful!</div>
                                            To activate this form, sign up at
                                            <br />
                                            <a href="https://startbootstrap.com/solution/contact-forms">https://startbootstrap.com/solution/contact-forms</a>
                                        </div>
                                    </div>
                                    <!-- Submit error message-->
                                    <!---->
                                    <!-- This is what your users will see when there is-->
                                    <!-- an error submitting the form-->
                                    <div class="d-none" id="submitErrorMessage"><div class="text-center text-danger mb-3">Error sending message!</div></div>
                                    <!-- Submit Button-->
                                    <button class="btn btn-primary text-uppercase text-center" id="submitButton" type="submit">Update</button>
                            </form>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Post Content-->
        <!-- <article class="mb-4">
            <div class="container px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                    </div>
                </div>
            </div>
        </article> -->
        <!-- Footer-->
        <%- include('layouts/footer'); -%>        
        <!-- Bootstrap core JS-->
        <%- include('layouts/scripts'); -%>
        <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script> -->
        <!-- Core theme JS-->
        <!-- <script src="js/scripts.js"></script> -->
    </body>
</html>
