<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('layouts/header'); -%>           
    </head>
    <body>
        <!-- Navigation-->
        <%- include('layouts/navbar'); -%>
        
        <!-- Page Header-->
        <header class="masthead" style="background-image: url('/assets/img/appointement-bg.jpg')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="site-heading">
                            <h2>Appointements Page</h2>
                            <span class="subheading">appointement slots</span>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Main Content-->
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <!-- add appointement -->
                <div class="col-md- col-lg-8 col-xl-7">
                    <div class="my-5">                       
                        <div id="login">
                            <form id="contactForm" action="/appointement/addAppointement" method="POST" data-sb-form-api-token="API_TOKEN">
                                <!-- date -->
                                <div class="form-floating">
                                    <input class="form-control" id="date" name="date" min="<%= todayDate %>" type="date" placeholder="Enter date..." required />
                                    <label for="date">Date: </label>                                    
                                </div>
                                <!-- time -->
                                <div class="form-floating">
                                    <select class="form-control" id="time" name="time" required>
                                        <option value="">Select Time</option>
                                        <% for (let hour = 9; hour <= 13; hour++) { %>
                                            <% for (let minute of ['00', '30']) { %>
                                                <option value="<%= hour.toString().padStart(2, '0') %>:<%= minute %>">
                                                    <%= hour.toString().padStart(2, '0') %>:<%= minute %>
                                                </option>
                                            <% } %>
                                        <% } %>
                                    </select>
                                    <!-- <input class="form-control" id="time" name="time" type="time" placeholder="Enter time..." required />
                                    <label for="time">Time: </label> -->     
                                <% if(errMsg) { %>                                  
                                <p style="font-size: larger; background-color: white;" class="text-danger"><%= errMsg %></p> 
                                <% } %>
                                </div>                                  
                                                                
                                <!-- Submit Button-->
                                <button class="btn btn-primary text-uppercase" id="submitButton" type="submit">Add Appointement</button>
                            </form>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
        <!-- Footer-->
        <%- include('layouts/footer'); -%>        
        <!-- Bootstrap core JS-->
        <%- include('layouts/scripts'); -%>
        
        <!-- Bootstrap core JS-->
        <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script> -->
        <!-- Core theme JS-->
        <!-- <script src="js/scripts.js"></script> -->
    </body>
</html>
